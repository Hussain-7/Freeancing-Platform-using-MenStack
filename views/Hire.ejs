<div ng-app="myApp" ng-controller="myCtrl" class="container">
    <div class="Hiring-main-heading">
        <div class="row">
            <h1>Hire now</h1>
            <p>Post a new job opening now in under a minute! It's really <em>that</em> easy</p>
        </div>
    </div>
    <form name="myForm" action="/hire" method="POST" novalidate>
        <div class="hirecard">
            <div class="left">
                <label class="label" for="fname">Job Title</label>
                <input class="input" type="text" id="fname" name="Job[jobTitle]" ng-model="jobTitle" placeholder="Title" required>
                <span style="color:red" ng-show="myForm.jobTitle.$dirty && myForm.jobTitle.$invalid">
                <span ng-show="myForm.jobTitle.$error.required">Username is required.</span>
                </span>
            </div>
            <div class="right">
                <label class="label" for="fname">Job Category</label>
                <select class="input" id="jobcategory"  name="Job[jobCategory]" required>
                    <option value="Information Technology" selected>Information Technology</option>
                    <option value="Science, Technology, Engineering and Mathematics">Science, Technology, Engineering and Mathematics</option>
                    <option value="Marketing">Marketing</option>
                    <option value="Content Writing">Content Writing</option>
                </select>
            </div>
            <div class="left">
                <label class="label" for="fname">Job Level</label>
                <select class="input" id="joblevel" name="Job[jobLevel]" required>
                    <option value="Beginner" selected>Beginner</option>
                    <option value="Intermediate">Intermediate</option>
                    <option value="Experienced">Experienced</option>
                    <option value="Highly Experienced and Skilled">Highly Experienced and Skilled</option>
                </select>
            </div>
            <div class="right">
                <label class="label" for="lname">Estimated Budget</label>
                <input class="input" type="number" id="budget" name="Job[budget]" placeholder="Budget eg. $50" required>
            </div>
            <div class="center">
                <label class="label" for="jobdescription">Job Description</label>
                <textarea name="Job[description]" id="jobdescription" class="input description" cols="30" rows="5"
                    placeholder="Brief information about the job" ng-model="jobDescription" required ></textarea>
            </div>
            <div class="left">
                <!-- <label class="label" for="Attachment">Attachment:</label>
            <input class="input" type="file" id="img" name="Attachment"> -->
                <label class="label" for="skills">Skills</label>
                <input class="input" type="text" id="budget" name="Job[skills]" ng-model="jobSkills" placeholder="add skills" required>

            </div>
            <div class="right">
                <label class="label">Duration</label>
                <input class="input" type="number" id="Duration" name="Job[duration]" ng-model="jobDuration" placeholder="Duration" required>
            </div>
            <!-- <div class="last"> -->
            <!-- <label class="label-last" for="skills">Skills:</label> -->
